rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /customers/{id} {
      allow read: if request.auth.uid == id;
      allow update: if request.auth.uid == id;
      allow create: if request.auth.uid == id;
    }

    match /products/{product} {
      allow read;
    }

    match /{path=**}/categories/{id} {
       allow read;
    }

    match /users/{id} {
      allow read: if request.auth.uid == id;
      allow update: if request.auth.uid == id
    }

    match /documents/{document} {
      allow read;
    }

    match /orders/{order} {
    	allow read: if path('/databases/(default)/documents/customers/' + request.auth.uid) == resource.data.customer;
    }

  }
}
